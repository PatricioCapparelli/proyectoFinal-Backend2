<section class="container">
    <h1>{{title}}</h1>
    <form action="/api/sessions/register" method="post">
        <div>
            <div>
                <label for="name">Name:</label>
                <br />
                <input type="text" id="name" name="name" placeholder="Juan" />
            </div>
            <div>
                <label for="last_name">Last Name:</label>
                <br />
                <input type="text" id="last_name" name="last_name" placeholder="Perez" />
            </div>
            <div>
                <label for="email">Email:</label>
                <br />
                <input type="email" id="email" name="email" placeholder="example@mail.com" />
            </div>
            <div>
                <label for="password">Password:</label>
                <br />
                <input type="password" id="password" name="password" placeholder="12345" autocomplete="additional-name"/>
            </div>
            <br />
            <button type="submit">Registrar</button>
        </div>
    </form>
    <p>Â¿Ya tienes cuenta?</p><a href="/login">Ingresar</a>
</section>